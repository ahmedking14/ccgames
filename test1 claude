      text: '#333333',       // Dark gray
      success: '#27ae60',    // Dark green
      error: '#e74c3c'       // Red
    };
    
    this.modules = [
      {
        id: 'crypto-basics',
        name: 'Cryptocurrency Fundamentals',
        description: 'Learn the basic concepts behind cryptocurrencies',
        icon: 'üí∞',
